{
  "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
  "id": "7db6f3fc-b89f-471e-bc4b-eb5b21e9b9f7",
  "name": "BuildCleanup",
  "friendlyName": "Build Cleanup",
  "description": "Removes all files and folders left behind after a build/pipeline has ran",
  "helpMarkDown": "[More Information](https://github.com/tomaustin700/AzureDevopsBuildCleanUpExtension/blob/main/README.MD)",
  "category": "Utility",
  "author": "TomAustin",
  "version": {
    "Major": 2,
    "Minor": 1,
    "Patch": 5
  },
  "minimumAgentVersion": "1.83.0",
  "inputs": [
    {
      "name": "ExcludeFiles",
      "type": "multiLine",
      "label": "Files To Exclude from Cleanup",
      "defaultValue": "",
      "required": true,
      "helpMarkDown": "Files to exclude from the cleanup. One file per line. ",
      "properties": {
        "resizable": true,
        "rows": "10",
        "maxLength": "5000"
      }
    }
  ],
  "instanceNameFormat": "Build Cleanup",
  "postjobexecution": {
    "PowerShell3": {
      "target": "Cleanup.ps1",
      "platforms": [
        "windows"
      ]
    }
  }
}